@startuml
!include style.puml
skinparam ArrowFontSize 14

box Logic LOGIC_COLOR_T1
participant ":LogicManager" as LogicManager LOGIC_COLOR
participant ":AddressBookParser" as AddressBookParser LOGIC_COLOR
participant "m: MarkCommand" as MarkCommand LOGIC_COLOR
end box

box Model MODEL_COLOR_T1
participant ":Model" as Model MODEL_COLOR
participant ":Person" as Person MODEL_COLOR
end box

[-> LogicManager : execute(mark 1 2)
activate LogicManager

LogicManager -> AddressBookParser : parseCommand(mark 1 2)
activate AddressBookParser

create MarkCommand
AddressBookParser -> MarkCommand
activate MarkCommand

MarkCommand --> AddressBookParser
deactivate MarkCommand

AddressBookParser --> LogicManager : m
deactivate AddressBookParser

LogicManager -> MarkCommand : execute()
activate MarkCommand

MarkCommand -> Model : markMembersAttendance(1, 2)
activate Model

loop until all members marked
Model -> Model: markOneMemberAttendance()
activate Model
Model -> Person : setPresent()
activate Person
Person --> Model
deactivate Person
return
end

Model --> MarkCommand
deactivate Model

MarkCommand --> LogicManager : result
deactivate MarkCommand
MarkCommand -[hidden]-> LogicManager : result
destroy MarkCommand

[<-- LogicManager
deactivate LogicManager

@enduml